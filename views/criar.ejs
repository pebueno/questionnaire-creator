<%- include("partials/header") -%>
  <div class="modal-dialog modal-login">
    <div class="modal-content">
      <form action="/criar" method="post">
        <div class="modal-header">
          <h4 class="modal-title">Crie seu questionário</h4>
        </div>
        <div class="modal-body">
          <div class="field_wrapper">
            <div>
            <label for="Título">Escreva sua(s) pergunta(s)</label>
              <input type="text" name="novaPergunta[]" value="" class="form-pergunta" required="required" />
              <a href="javascript:void(0);" title="Adicionar pergunta"><i
                  class="material-icons adicionar">&#xe147;</i></a>
            </div>
          </div>
          <br>
          <div class="form-group">
            <label for="Título">Crie um título</label>
            <input type="text" name="tituloQuestionario" class="form-control" required="required">
          </div>

          <br>
          <label for="Título">Escolha o usuario</label>
          <br>
          <select id="cars" name="usuarioQuestionario" class="form-control">
            <option value="Pedro">Pedro</option>
            <option value="Isabela">Isabela</option>
            <option value="Fernando">Fernando</option>
            <option value="Stella">Stella</option>
          </select>
        </div>
        <div class="modal-footer justify-content-between">
          <input type="submit" class="btn btn-primary" value="Criar questionário">
        </div>
      </form>
    </div>
  </div>

  <script type="text/javascript">
    $(document).ready(function () {
      var maxField = 10; 
      var addButton = $('.adicionar'); 
      var wrapper = $('.field_wrapper'); 
      var fieldHTML = '<div><input type="text" name="novaPergunta[]" class="form-pergunta" value="" required="required" /><a href="javascript:void(0);" class="remove_button"><i class="material-icons">&#xe15c;</i></a></div>'; //New input field html 
      var x = 1; 

      $(addButton).click(function () {
        if (x < maxField) {
          x++; 
          $(wrapper).append(fieldHTML);
        }
      });
      $(wrapper).on('click', '.remove_button', function (e) {
        e.preventDefault();
        $(this).parent('div').remove();
        x--;
      });
    });
  </script>

  <%- include("partials/footer") -%>